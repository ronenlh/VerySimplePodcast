<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/accentPressed"
                android:endColor="@color/accent"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/accent" />
            <corners
                android:bottomLeftRadius="3dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="3dp"
                android:topRightRadius="0dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/accentPressed"
                android:startColor="@color/accent"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/accent" />
            <corners
                android:bottomLeftRadius="3dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="3dp"
                android:topRightRadius="0dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="00dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/accent"
                android:startColor="@color/accent"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/accent" />
            <corners
                android:bottomLeftRadius="3dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="3dp"
                android:topRightRadius="0dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>