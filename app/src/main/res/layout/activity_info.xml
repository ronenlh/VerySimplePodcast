<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ronen.studio08.verysimplepodcast.controllers.InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:orientation="horizontal"
        android:elevation="7dp"
        android:background="@drawable/myrect"
        android:padding="5dp">

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@drawable/cast_album_art_placeholder"
            android:id="@+id/imageView"
            android:layout_width="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameTextView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                tools:ignore="MissingPrefix"
                fontPath="fonts/Roboto-Bold.ttf"
                android:lines="1"
                tools:text="Feed Name"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/artistTextView"
                android:lines="1"
                tools:text="Artist Name"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtitleTextView"
                tools:text="Subtitle Name"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:lines="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addButton"
                    android:layout_above="@+id/infoListView"
                    android:layout_alignLeft="@+id/subtitleTextView"
                    android:layout_alignStart="@+id/subtitleTextView"
                    android:onClick="addFeed"
                    />

                    <Button
                        android:text="Website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/addButton"
                        android:layout_toRightOf="@+id/addButton"
                        android:layout_toEndOf="@+id/addButton"
                        android:id="@+id/webButton"
                        android:onClick="goToWebsite"
                        />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/infoListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
