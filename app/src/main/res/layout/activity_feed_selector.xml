<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.studio08.verysimplepodcast.FeedSelectorActivity"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/icons_container"
            android:background="#d4d4d4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plus_textView"
                android:text="@string/fa_plus"
                android:layout_margin="10dp"
                android:textSize="30sp"
                android:textColor="#000000" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/podcasts_listView"
            android:layout_weight="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d4d4d4">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="false" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
            android:id="@+id/miniplayer_container"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backward_textView"
                    android:text="@string/fa_step_backward"
                    android:layout_margin="10dp"
                    android:textSize="30sp"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/play_textView"
                    android:text="@string/fa_play"
                    android:layout_margin="10dp"
                    android:textSize="30sp"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forward_textView"
                    android:text="@string/fa_step_forward"
                    android:layout_margin="10dp"
                    android:textSize="30sp"
                    android:textColor="#000000" />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>

