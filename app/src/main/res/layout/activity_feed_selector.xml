<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.studio08.verysimplepodcast.FeedSelectorActivity"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/icons_container"
            android:background="#E0E0E0"
            android:elevation="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plus_imageView"
                android:layout_margin="10dp"
                android:textSize="30sp"
                android:textColor="#000000"
                android:src="@drawable/ic_add_24dp" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/podcasts_listView"
            android:layout_weight="1.14"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:elevation="4dp">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="false" />

        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:id="@+id/miniplayer_container"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backward_imageView"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:src="@drawable/ic_rotate_left_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/play_imageView"
                    android:layout_toStartOf="@+id/play_imageView" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/play_imageView"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:src="@drawable/ic_play_arrow_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forward_imageView"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:src="@drawable/ic_rotate_right_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/play_imageView"
                    android:layout_toEndOf="@+id/play_imageView" />
            </RelativeLayout>
    </LinearLayout>

</LinearLayout>

